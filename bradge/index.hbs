{{!< default}}

<header>

  {{#is "home"}}
  <section {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}); background-size: cover{{else}}no-cover{{/if}}">
    {{#if @blog.logo}}
      <img src="{{@blog.logo}}" alt="{{@blog.title}}"/>
    {{else}}
      <img src="/assets/images/brage-logo-0fab225d36.png" alt="Brage Theme"/>
    {{/if}}
    <h1>{{@blog.title}}</h1>

    <h2 class="page-description">{{@blog.description}}</h2>
  </section>
  {{/is}}

</header>

<main>
  <section>
    <picture>
        <source srcset="http://placehold.it/850x350, http://placehold.it/2500x350 2x" media="(min-width: 1000px)">
        <source srcset="http://placehold.it/850x350, http://placehold.it/1600x350 2x" media="(min-width: 800px)">
        <source srcset="http://placehold.it/350x150, http://placehold.it/700x300 2x">
        <img srcset="http://placehold.it/350x150" alt="Cambodia Map">
    </picture>

    {{#foreach posts}}
    {{> "post"}}
    {{/foreach}}
  </section>

</main>
